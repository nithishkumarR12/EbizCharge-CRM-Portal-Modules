<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_payment_form_inherit_payment_main" model="ir.ui.view">
            <field name="name">view.account.payment.form.inherit.payment</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <field name="payment_transaction_id" position="attributes">
                    <attribute name="groups">base.group_user</attribute>
                </field>
                <xpath expr="//group[2]" position="inside">
                     <field name="transaction_ref" invisible="payment_method_code != 'ebizcharge'"/>
                     <field name="ebiz_transaction_status" invisible="payment_method_code != 'ebizcharge'" readonly="1"/>
                     <field name="ebiz_transaction_result" invisible="payment_method_code != 'ebizcharge'" readonly="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>