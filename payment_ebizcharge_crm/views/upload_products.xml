<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <data noupdate="1">
            <record id="my_record_07" model="upload.products">
                <field name="add_filter">0</field>
            </record>
        </data>

        <record id="form_view_action_upload_products" model="ir.ui.view">
            <field name="name">Upload Products</field>
            <field name="model">upload.products</field>
            <field name="arch" type="xml">
                <form create="0" js_class="ebiz_custom_form" string="Upload Products">
                    <h1>Upload Products</h1>
                    <br/>
                    <group>
                        <group>
                            <label class="text-nowrap" for="ebiz_profile_id" string="EBizCharge Merchant Account"/>
                            <field name="ebiz_profile_id" nolabel="1" required="1"/>
                        </group>
                        <group>
                            <button class="oe_highlight" name="create_default_records" string="Refresh" style="height: 25px;padding-top: 3px;" type="object"/>
                            <field invisible="1" name="company_ids"/>
                        </group>
                    </group>
                    <notebook colspan="3">
                        <page autofocus="autofocus" string="List">
                            <field class="notebook_width" invisible="not transaction_history_line" mode="list" name="transaction_history_line" widget="upload_product_buttons">
                                <list limit="15" no_open="1" string="Products List">
                                    <field name="id" column_invisible="1"/>
                                    <field name="internal_reference"/>
                                    <field name="product_name"/>
                                    <field column_invisible="1" name="currency_id"/>
                                    <field name="sales_price" options="{'currency_field': 'currency_id'}" widget="monetary"/>
                                    <field name="cost" options="{'currency_field': 'currency_id'}" widget="monetary"/>
                                    <field name="quantity"/>
                                    <field name="type"/>
                                    <field name="last_sync_date"/>
                                    <field name="sync_status"/>
                                </list>
                            </field>
                            <div invisible="transaction_history_line">
                                <div class="empty_div_setting">
                                    <div class="o_view_nocontent">
                                        <div class="o_nocontent_help">
                                            <p class="o_view_nocontent_smiling_face" style="margin-top: 60%;">
                                                No Product(s) Found.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </page>
                        <page string="Logs">
                            <field class="notebook_width" invisible="not logs_line" mode="list" name="logs_line" widget="upload_product_buttons">
                                <list limit="15" no_open="1" string="Products Logs">
                                    <field name="id" column_invisible="1"/>
                                    <field name="internal_reference"/>
                                    <field name="name"/>
                                    <field column_invisible="1" name="currency_id"/>
                                    <field name="sales_price" options="{'currency_field': 'currency_id'}" widget="monetary"/>
                                    <field name="cost" options="{'currency_field': 'currency_id'}" widget="monetary"/>
                                    <field name="quantity"/>
                                    <field name="type"/>
                                    <field name="last_sync_date"/>
                                    <field name="sync_status"/>
                                </list>
                            </field>
                            <div invisible="logs_line">
                                <div class="empty_div_setting">
                                    <div class="o_view_nocontent">
                                        <div class="o_nocontent_help">
                                            <p class="o_view_nocontent_smiling_face" style="margin-top: 96%;">
                                                No Record(s) Found.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="action_upload_products" model="ir.actions.act_window">
            <field name="name">Upload Products</field>
            <field name="res_model">upload.products</field>
            <field name="res_id" ref="my_record_07"/>
            <field name="target">inline</field>
            <field name="view_mode">form,list</field>
        </record>

        <menuitem action="action_upload_products" id="menu_ebiz_upload_product_template" name="Upload Products" parent="ebiz_upload_menu_main" sequence="4"/>

    </data>
</odoo>
