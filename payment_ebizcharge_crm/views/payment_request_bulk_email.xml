<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="form_view_payment_request_bulk_email" model="ir.ui.view">
            <field name="name">Email Pay for Invoices</field>
            <field name="model">payment.request.bulk.email</field>
            <field name="arch" type="xml">
                <form create="0" js_class="ebiz_custom_form" string="Email Pay for Invoices">
                    <h1>Email Pay for Invoices</h1>
                    <field invisible="1" name="is_reopened"/>
                    <br/>
                    <group>
                        <group>
                            <label class="text-nowrap" for="ebiz_profile_id" string="EBizCharge Merchant Account"/>
                            <field domain="[('is_valid_credential', '=', True), ('is_active', '=', True), ('is_active', '=', True), '|', ('company_ids', 'in', company_ids), ('company_ids', '=', False)]" name="ebiz_profile_id" nolabel="1" options="{'no_create': True, 'no_open': True, 'no_quick_create': True}" string="EBizCharge Merchant Account"/>
                            <field name="start_date"/>
                            <field invisible="1" name="company_ids"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <br/>
                    <button class="oe_highlight" name="search_transaction" string="Refresh" type="object"/>
                    <br/><br/>
                    <notebook colspan="3">
                        <page string="Send New">
                            <field class="notebook_width" invisible="not transaction_history_line" mode="list" name="transaction_history_line" widget="email_pay_invoices">
                                <list create="false" delete="false" limit="15" no_open="1" string="Transaction Lines">
                                    <field column_invisible="1" name="id"/>
                                    <field column_invisible="1" name="invoice_id"/>
                                    <field name="name" readonly="1"/>
                                    <field name="customer_name" readonly="1"/>
                                    <field name="customer_id" readonly="1"/>
                                    <field name="amount" options="{'currency_field': 'currency_id'}" readonly="1" widget="monetary"/>
                                    <field name="amount_due" options="{'currency_field': 'currency_id'}" readonly="1" widget="monetary"/>
                                    <field name="invoice_date" readonly="1"/>
                                    <field name="invoice_due_date" readonly="1"/>
                                    <field name="email_id" readonly="1"/>
                                </list>
                            </field>
                            <div invisible="transaction_history_line">
                                <div class="empty_div_setting">
                                    <div class="o_view_nocontent">
                                        <div class="o_nocontent_help">
                                            <p class="o_view_nocontent_smiling_face" style="margin-top: 60%;">
                                                No Record(s) Found.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </page>
                        <page string="Pending Requests">
                            <field class="notebook_width" invisible="not transaction_history_line_pending" mode="list" name="transaction_history_line_pending" widget="email_pay_invoices">
                                <list create="false" delete="false" limit="15" no_open="1" string="Transaction Lines">
                                    <field column_invisible="1" name="currency_id" readonly="1"/>
                                    <field column_invisible="1" name="invoice_id"/>
                                    <field column_invisible="1" name="id"/>
                                    <field name="name" readonly="1"/>
                                    <field name="customer_name" readonly="1"/>
                                    <field name="customer_id" readonly="1"/>
                                    <field name="amount" options="{'currency_field': 'currency_id'}" readonly="1" widget="monetary"/>
                                    <field name="amount_due" options="{'currency_field': 'currency_id'}" readonly="1" widget="monetary"/>
                                    <field name="email_requested_amount" options="{'currency_field': 'currency_id'}" readonly="1" widget="monetary"/>
                                    <field name="invoice_date" readonly="1"/>
                                    <field name="invoice_due_date" readonly="1"/>
                                    <field name="email_id" readonly="1"/>
                                    <field name="date_and_time_Sent" readonly="1"/>
                                    <field name="over_due_status" readonly="1"/>
                                    <field name="no_of_times_sent" readonly="1"/>
                                </list>
                            </field>
                            <br/><br/>
                            <div invisible="transaction_history_line_pending">
                                <div class="empty_div_setting">
                                    <div class="o_view_nocontent">
                                        <div class="o_nocontent_help">
                                            <p class="o_view_nocontent_smiling_face" style="margin-top: 25%;">
                                                No Pending Request(s) Found
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </page>
                        <page string="Received Email Payments">
                            <field class="notebook_width" invisible="not transaction_history_line_received" mode="list" name="transaction_history_line_received" widget="email_pay_invoices">
                                <list create="false" delete="false" limit="15" no_open="1" string="Transaction Lines">
                                    <field column_invisible="1" name="invoice_id"/>
                                    <field name="payment_request_date_time" readonly="1"/>
                                    <field name="name" readonly="1"/>
                                    <field name="customer_name" readonly="1"/>
                                    <field name="customer_id" readonly="1"/>
                                    <field name="amount" options="{'currency_field': 'currency_id'}" readonly="1" widget="monetary"/>
                                    <field name="paid_amount" options="{'currency_field': 'currency_id'}" readonly="1" widget="monetary"/>
                                    <field name="payment_method" readonly="1"/>
                                    <field name="ref_num" readonly="1"/>
                                </list>
                            </field>
                            <br/><br/>
                            <div invisible="transaction_history_line_received">
                                <div class="empty_div_setting">
                                    <div class="o_view_nocontent">
                                        <div class="o_nocontent_help">
                                            <p class="o_view_nocontent_smiling_face" style="margin-top: 20%;">
                                                No Received Email Payment(s) Found
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <data noupdate="1">
            <record id="my_record_03" model="payment.request.bulk.email">
                <field name="add_filter">0</field>
            </record>
        </data>

        <record id="payment_bulk_request" model="ir.actions.act_window">
            <field name="name">Email Pay for Invoices</field>
            <field name="res_model">payment.request.bulk.email</field>
            <field name="res_id" ref="my_record_03"/>
            <field name="target">inline</field>
            <field name="view_mode">form,list</field>
        </record>

        <menuitem action="payment_bulk_request" id="request_payment_view_email" name="Email Pay for Invoices" parent="ebiz_email_template_menu_main" sequence="1"/>

    </data>
</odoo>
