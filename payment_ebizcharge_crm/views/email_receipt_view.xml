<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="tree_form_email_receipt" model="ir.ui.view">
            <field name="name">Email Receipts</field>
            <field name="model">email.receipt</field>
            <field name="arch" type="xml">
                <list create="0" delete="0" edit="0" string="Email Receipts">
                    <field name="name"/>
                    <field name="receipt_subject"/>
                    <field name="target"/>
                    <field name="content_type"/>
                    <field name="receipt_from_email"/>
                    <field name="instance_id" string="Merchant Account"/>
                    <field column_invisible="1" name="auto_get_receipts"/>
                </list>
            </field>
        </record>

        <record id="form_view_email_receipt" model="ir.ui.view">
            <field name="name">Email Receipts</field>
            <field name="model">email.receipt</field>
            <field name="arch" type="xml">
                <form create="0" delete="0" edit="0" string="Email Receipt">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="receipt_subject"/>
                            <field name="receipt_from_email"/>
                            <br/>
                            <br/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_email_receipt" model="ir.actions.act_window">
            <field name="name">Email Receipts</field>
            <field name="res_model">email.receipt</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem action="action_email_receipt" id="email_receipt_menu" name="Email Receipts" parent="setup_menu_main" sequence="3"/>


    </data>
</odoo>