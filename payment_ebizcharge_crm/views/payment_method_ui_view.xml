<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <data noupdate="1">
            <record id="my_record_04" model="payment.method.ui">
                <field name="add_filter">0</field>
            </record>
        </data>

        <record id="form_view_request_payment_method_ui" model="ir.ui.view">
            <field name="name">Request Payment Methods</field>
            <field name="model">payment.method.ui</field>
            <field name="arch" type="xml">
                <form create="0" js_class="ebiz_custom_form" string="Request Payment Methods">
                    <h1>
                        Request Payment Methods
                    </h1>
                    <br/>
                    <field invisible="1" name="company_ids"/>
                    <field invisible="1" name="is_reopened"/>
                    <notebook>
                        <page string="Send Requests">
                            <group>
                                <group>
                                    <label class="text-nowrap" for="ebiz_profile_id" string="EBizCharge Merchant Account"/>
                                    <field domain="[('is_valid_credential', '=', True), ('is_active', '=', True), '|', ('company_ids', 'in', company_ids), ('company_ids', '=', False)]" name="ebiz_profile_id" nolabel="1" options="{'no_create': True, 'no_open': True, 'no_quick_create': True}" string="EBizCharge Merchant Account"/>
                                    <field name="customer_selection" required="1"/>
                                </group>
                            </group>
                            <button class="oe_highlight" name="search_customers" string="Refresh" style="height: 23px;padding-top: 1px;" type="object"/>
                            <group col="4" invisible="not transaction_history_line">
                                <group/>
                                <group/>
                            </group>
                            <field class="notebook_width" invisible="not transaction_history_line" mode="list" name="transaction_history_line" widget="payment_method_ui">
                                <list create="false" delete="false" limit="15" no_open="1" string="Transaction Lines">
                                    <field name="customer_name" readonly="1" widget="selection"/>
                                    <field name="customer_id" readonly="1"/>
                                    <field name="customer_phone" readonly="1"/>
                                    <field name="email_id" readonly="1"/>
                                    <field name="customer_city" readonly="1"/>
                                </list>
                            </field>
                            <div invisible="transaction_history_line">
                                <div class="empty_div_setting">
                                    <div class="o_view_nocontent">
                                        <div class="o_nocontent_help" style="margin-top: 8%;">
                                            <p class="o_view_nocontent_smiling_face">
                                                No Customer(s) found.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </page>
                        <page string="Pending Requests">
                            <group>
                                <group>
                                    <label class="text-nowrap" for="ebiz_profile_pending_id" string="EBizCharge Merchant Account"/>
                                    <field domain="[('is_valid_credential', '=', True), ('is_active', '=', True),'|', ('company_ids', 'in', company_ids), ('company_ids', '=', False)]" name="ebiz_profile_pending_id" nolabel="1" options="{'no_create': True, 'no_open': True, 'no_quick_create': True}" string="EBizCharge Merchant Account"/>
                                    <field name="start_date"/>
                                </group>
                                <group>
                                    <label class="text-nowrap" for="is_adjustment" string=" "/>
                                    <field invisible="0" name="is_adjustment" nolabel="1" readonly="1"/>
                                    <field name="end_date"/>
                                </group>
                            </group>
                            <group col="2">
                                <group>
                                    <button class="oe_highlight" context="{'from_pending_button': True}" name="create_pending_request_record" string="Refresh" style="height: 23px;padding-top: 1px;" type="object"/>
                                </group>
                            </group>
                            <group col="4" invisible="not transaction_history_line_pending">
                                <group></group>
                                <group></group>
                            </group>
                            <field class="notebook_width" invisible="not transaction_history_line_pending" mode="list" name="transaction_history_line_pending" widget="payment_method_ui">
                                <list create="false" delete="false" limit="15" no_open="1" string="Transaction Lines">
                                    <field name="id" column_invisible="1"/>
                                    <field name="customer_name" readonly="1" widget="selection"/>
                                    <field name="customer_id" readonly="1"/>
                                    <field name="email_id" readonly="1"/>
                                    <field name="date_time" readonly="1"/>
                                    <field column_invisible="1" name="payment_internal_id"/>
                                    <field name="no_of_times_sent" readonly="1"/>
                                </list>
                            </field>
                            <div invisible="transaction_history_line_pending">
                                <div class="empty_div_setting">
                                    <div class="o_view_nocontent">
                                        <div class="o_nocontent_help" style="margin-top: 8%;">
                                            <p class="o_view_nocontent_smiling_face">
                                                No Pending Request(s) Found.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </page>
                        <page string="Added Payment Methods">
                            <group>
                                <group>
                                    <label class="text-nowrap" for="ebiz_profile_received_id" string="EBizCharge Merchant Account"/>
                                    <field domain="[('is_valid_credential', '=', True), ('is_active', '=', True),'|', ('company_ids', 'in', company_ids), ('company_ids', '=', False)]" name="ebiz_profile_received_id" nolabel="1" options="{'no_create': True, 'no_open': True, 'no_quick_create': True}" string="EBizCharge Merchant Account"/>
                                    <field name="start_date_received"/>
                                </group>
                                <group>
                                    <label class="text-nowrap" for="is_adjustment" string=" "/>
                                    <field invisible="0" name="is_adjustment" nolabel="1" readonly="1"/>
                                    <field name="end_date_received"/>
                                </group>
                            </group>
                            <group col="2">
                                <group>
                                    <button class="oe_highlight" context="{'from_received_button': True}" name="create_received_request_record" string="Refresh" style="height: 23px;padding-top: 1px;" type="object"/>
                                </group>
                            </group>
                            <group col="4" invisible="not transaction_history_line_received">
                                <group></group>
                                <group/><group/>
                            </group>
                            <field class="notebook_width" invisible="not transaction_history_line_received" mode="list" name="transaction_history_line_received" widget="payment_method_ui">
                                <list create="false" delete="false" limit="15" no_open="1" string="Transaction Lines">
                                    <field name="id" column_invisible="1"/>
                                    <field name="customer_name" readonly="1" widget="selection"/>
                                    <field name="customer_id" readonly="1"/>
                                    <field name="email_id" readonly="1"/>
                                    <field name="date_time" readonly="1"/>
                                    <field name="payment_method" readonly="1"/>
                                    <field column_invisible="1" name="payment_internal_id"/>
                                    <field column_invisible="1" name="customer_token"/>
                                </list>
                            </field>
                            <div invisible="transaction_history_line_received">
                                <div class="empty_div_setting">
                                    <div class="o_view_nocontent">
                                        <div class="o_nocontent_help" style="margin-top: 8%;">
                                            <p class="o_view_nocontent_smiling_face">
                                                No Payment Method(s) Found.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </page>
                    </notebook>
                    <br/><br/><br/><br/><br/><br/><br/>
                </form>
            </field>
        </record>

        <record id="action_request_payment_method_ui" model="ir.actions.act_window">
            <field name="name">Request Payment Methods</field>
            <field name="res_model">payment.method.ui</field>
            <field name="res_id" ref="my_record_04"/>
            <field name="target">inline</field>
            <field name="view_mode">form,list</field>
        </record>

        <menuitem action="action_request_payment_method_ui" id="payment_method_ui" name="Request Payment Methods" parent="ebiz_email_template_menu_main" sequence="2"/>

    </data>
</odoo>
