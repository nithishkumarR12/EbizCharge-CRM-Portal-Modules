<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <data noupdate="1">
            <record id="my_record_08" model="inv.payment.link.bulk">
                <field name="add_filter">0</field>
            </record>
        </data>
        <record id="form_view_inv_payment_link_bulk" model="ir.ui.view">
            <field name="name">Invoice Payment Link Bulk</field>
            <field name="model">inv.payment.link.bulk</field>
            <field name="arch" type="xml">
                <form create="0" js_class="ebiz_custom_form" string="Invoice Payment Link Bulk">
                    <h1>
                        Generate Payment Links for Invoices
                    </h1>
                    <br/>
                    <group>
                        <group>
                            <label class="text-nowrap" for="ebiz_profile_id" string="EBizCharge Merchant Account"/>
                            <field domain="[('is_valid_credential', '=', True), ('is_active', '=', True), ('is_active', '=', True), '|', ('company_ids', 'in', company_ids), ('company_ids', '=', False)]"  name="ebiz_profile_id" nolabel="1" options="{'no_create': True, 'no_open': True, 'no_quick_create': True}" string="EBizCharge Merchant Account"/>
                            <field name="start_date"/>
                            <field name="number"/>
                            <field invisible="1" name="company_ids"/>
                        </group>
                        <group>
                            <field name="partner_id" string="Select Customer"/>
                            <field name="end_date"/>
                            <field name="generated_link_status"/>
                        </group>
                    </group>
                    <br/>
                    <button class="oe_highlight" name="create_default_records" string="Refresh" type="object"/>
                    <field invisible="not invoice_lines" mode="list" name="invoice_lines" widget="payment_link_ebiz">
                        <list create="false" delete="0" limit="15" no_open="1" string="Invoices">
                            <field column_invisible="1" name="id" readonly="1"/>
                            <field column_invisible="1" name="currency_id" readonly="1"/>
                            <field column_invisible="1" name="state" readonly="1"/>
                            <field name="customer_id" readonly="1" string="Customer ID"/>
                            <field name="partner_id" readonly="1" string="Customer"/>
                            <field name="invoice" readonly="1" string="Number"/>
                            <field name="invoice_date" string="Invoice Date"/>
                            <field name="amount_total_signed" options="{'currency_field': 'currency_id'}" string="Invoice Total" widget="monetary"/>
                            <field name="amount_residual_signed" options="{'currency_field': 'currency_id'}" string="Balance Remaining" widget="monetary"/>
                            <field name="request_amount" options="{'currency_field': 'currency_id'}" widget="monetary"/>
                            <field name="generated_link" options="{'string': 'Copy Link'}" widget="CopyClipboardChar"/>
                            <field column_invisible="1" name="odoo_payment_link"/>
                        </list></field>
                    <div invisible="invoice_lines">
                        <div class="empty_div_setting">
                            <div class="o_view_nocontent">
                                <div class="o_nocontent_help">
                                    <p class="o_view_nocontent_smiling_face" style="margin-top: 60%;">
                                        No invoice(s) found.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </form></field>
        </record>
        <record id="inv_payment_link_bulk_act" model="ir.actions.act_window">
            <field name="name">Generate Payment Links for Invoices</field>
            <field name="res_model">inv.payment.link.bulk</field>
            <field name="res_id" ref="my_record_08"/>
            <field name="target">inline</field>
            <field name="view_mode">form,list</field>
        </record>
        <menuitem action="inv_payment_link_bulk_act" id="inv_payment_link_bulk_menu" name="Generate Payment Links for Invoices" parent="ebiz_email_template_menu_main" sequence="1"/>
    </data>
</odoo>
