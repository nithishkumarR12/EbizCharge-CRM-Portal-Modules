<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="tree_form_email_template" model="ir.ui.view">
            <field name="name">Email Templates</field>
            <field name="model">email.templates</field>
            <field name="arch" type="xml">
                <list create="0" delete="0" edit="0" string="Email Templates">
                    <field name="name"/>
                    <field name="template_subject"/>
                    <field name="template_description"/>
                    <field name="template_type_id"/>
                    <field name="instance_id" string="Merchant Account"/>
                    <field column_invisible="1" name="auto_get_templates"/>
                </list>
            </field>
        </record>

        <record id="form_view_email_template" model="ir.ui.view">
            <field name="name">Email Templates</field>
            <field name="model">email.templates</field>
            <field name="arch" type="xml">
                <form create="0" delete="0" edit="0" string="Email Templates">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="template_subject"/>
                            <field name="template_description"/>
                            <field name="template_type_id"/>
                            <br/>
                            <br/>
                        </group>
                    </sheet>
                </form></field>
        </record>

        <record id="action_email_template" model="ir.actions.act_window">
            <field name="name">Email Templates</field>
            <field name="res_model">email.templates</field>
            <field name="view_mode">list,form</field>
        </record>


        <menuitem action="action_email_template" id="email_template_menu" name="Email Templates" parent="setup_menu_main" sequence="2"/>


    </data>
</odoo>