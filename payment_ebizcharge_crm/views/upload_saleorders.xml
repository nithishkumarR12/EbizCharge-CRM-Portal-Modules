<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <data noupdate="1">
            <record id="my_record_06" model="upload.sale.orders">
                <field name="add_filter">0</field>
            </record>
        </data>

        <record id="form_view_request_upload_sale_orders" model="ir.ui.view">
            <field name="name">Upload Sales Orders</field>
            <field name="model">upload.sale.orders</field>
            <field name="arch" type="xml">
                <form create="0" js_class="ebiz_custom_form" string="Upload Sales Orders">
                    <h1>Upload Sales Orders</h1>
                    <br/>
                    <group>
                        <group>
                            <label class="text-nowrap" for="ebiz_profile_id" string="EBizCharge Merchant Account"/>
                            <field name="ebiz_profile_id" nolabel="1" required="1"/>
                        </group>
                        <group>
                            <button class="oe_highlight" name="create_default_records" string="Refresh" style="height: 25px;padding-top: 3px;" type="object"/>
                            <field invisible="1" name="company_ids"/>
                        </group>
                    </group>
                    <notebook colspan="3">
                        <page autofocus="autofocus" string="List">
                            <field class="notebook_width" invisible="not transaction_history_line" mode="list" name="transaction_history_line" widget="upload_sale_order_buttons">
                                <list limit="15" no_open="1" string="Transaction Lines">
                                    <field name="id" column_invisible="1"/>
                                    <field column_invisible="1" name="currency_id"/>
                                    <field name="order_no" readonly="1"/>
                                    <field name="customer_name" readonly="1"/>
                                    <field name="customer_id" readonly="1"/>
                                    <field name="amount_total" options="{'currency_field': 'currency_id'}" readonly="1" widget="monetary"/>
                                    <field name="amount_due" options="{'currency_field': 'currency_id'}" readonly="1" widget="monetary"/>
                                    <field name="order_date" readonly="1"/>
                                    <field name="last_sync_date" readonly="1"/>
                                    <field name="sync_status" readonly="1"/>
                                </list>
                            </field>
                            <div invisible="transaction_history_line">
                                <div class="empty_div_setting">
                                    <div class="o_view_nocontent">
                                        <div class="o_nocontent_help">
                                            <p class="o_view_nocontent_smiling_face" style="margin-top: 58%;">
                                                No Sale Order(s) Found.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </page>
                        <page string="Logs">
                            <field class="notebook_width" invisible="not logs_line" mode="list" name="logs_line" widget="upload_sale_order_buttons">
                                <list limit="15" no_open="1" string="Transaction Lines">
                                    <field name="id" column_invisible="1"/>
                                    <field column_invisible="1" name="currency_id"/>
                                    <field name="order_no" readonly="1"/>
                                    <field name="customer_name" readonly="1"/>
                                    <field name="customer_id" readonly="1"/>
                                    <field name="amount_total" options="{'currency_field': 'currency_id'}" readonly="1" widget="monetary"/>
                                    <field name="amount_due" options="{'currency_field': 'currency_id'}" readonly="1" widget="monetary"/>
                                    <field name="order_date" readonly="1"/>
                                    <field name="last_sync_date" readonly="1"/>
                                    <field name="sync_status" readonly="1"/>
                                </list>
                            </field>
                            <div invisible="logs_line">
                                <div class="empty_div_setting">
                                    <div class="o_view_nocontent">
                                        <div class="o_nocontent_help">
                                            <p class="o_view_nocontent_smiling_face" style="margin-top: 96%;">
                                                No Record(s) Found.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="action_res_partner_upload_sale_orders" model="ir.actions.act_window">
            <field name="name">Upload Sales Orders</field>
            <field name="res_model">upload.sale.orders</field>
            <field name="res_id" ref="my_record_06"/>
            <field name="target">inline</field>
            <field name="view_mode">form,list</field>
        </record>

        <menuitem action="action_res_partner_upload_sale_orders" id="menu_ebiz_upload_sale_orders" name="Upload Sales Orders" parent="ebiz_upload_menu_main" sequence="1"/>

    </data>
</odoo>
