<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="wizard_batch_process_message_view" model="ir.ui.view">
            <field name="name">batch.process.message</field>
            <field name="model">batch.process.message</field>
            <field name="arch" type="xml">
                <form string="Message">
                    <div>
                        <field name="success_count" nolabel="1" readonly="1"/>
                        out of
                        <field name="total" nolabel="1" readonly="1"/>
                        invoices were successfully processed!
                    </div>
                    <br/>
                    <field color="green:record_message=='Success" name="lines_ids" readonly="1">
                        <list>
                            <field name="customer_id"/>
                            <field name="customer_name"/>
                            <field name="invoice_no"/>
                            <field name="status"/>
                        </list>
                    </field>
                    <footer>
                        <button class="oe_highlight" special="cancel" string="Ok" style="width:10%"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="wizard_batch_process_message_action" model="ir.actions.act_window">
            <field name="name">Batch Process Result</field>
            <field name="res_model">batch.process.message</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="form_view_batch_processing" model="ir.ui.view">
            <field name="name">Batch Processing</field>
            <field name="model">batch.processing</field>
            <field name="arch" type="xml">
                <form create="0" js_class="ebiz_custom_form" string="Batch Processing">
                    <h1>
                        Batch Processing for Invoices
                    </h1>
                    <field invisible="1" name="is_surcharge"/>
                    <div class="fa fa-info-circle text-nowrap" invisible="not is_surcharge" style="padding:10px;background-color:#E4D4E0;font-weight:bold;font-size:15px;margin:2px;border-radius:4px;">
                        <span style="margin-left:7px;">
                        </span>
                        <field invisible="not is_surcharge" name="surcharge_terms" readonly="1"/>
                    </div>
                    <br/><br/>
                    <group>
                        <group>
                            <label class="text-nowrap" for="ebiz_profile_id" string="EBizCharge Merchant Account"/>
                            <field domain="[('is_valid_credential', '=', True), ('is_active', '=', True),'|',('company_ids', 'in', company_ids), ('company_ids', '=', False)]" name="ebiz_profile_id" nolabel="1" options="{'no_create': True, 'no_open': True, 'no_quick_create': True}" string="EBizCharge Merchant Account"/>
                            <field name="start_date"/>
                            <field invisible="1" name="company_ids"/>
                        </group>
                        <group>
                            <field name="partner_id" options="{'no_create': True, 'no_open': True, 'no_quick_create': True}"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <br/>
                    <button class="oe_highlight" name="create_default_records" string="Refresh" type="object"/>
                    <br/><br/>
                    <notebook colspan="3">
                        <page string="List">
                            <field class="notebook_width" invisible="not transaction_history_line" mode="list" name="transaction_history_line" widget="batch_processing">
                                <list delete="false" limit="15" no_open="1" string="Invoices">
                                    <field column_invisible="1" name="invoice_id"/>
                                    <field column_invisible="1" name="send_receipt"/>
                                    <field column_invisible="1" name="default_card_id"/>
                                    <field name="invoice_date" readonly="1"/>
                                    <field name="name" readonly="1"/>
                                    <field name="customer_name" readonly="1"/>
                                    <field name="customer_id" readonly="1"/>
                                    <field name="invoice_date_due" readonly="1"/>
                                    <field column_invisible="1" name="currency_id" readonly="1"/>
                                    <field name="amount" options="{'currency_field': 'currency_id'}" readonly="1" widget="monetary"/>
                                    <field class="after_it" name="amount_residual" options="{'currency_field': 'currency_id'}" readonly="1" widget="monetary"/>
                                    <field column_invisible="1" name="payment_method"/>
                                    <field name="email" readonly="1"/>
                                    <field column_invisible="1" name="generated_link" />
                                    
                                </list>
                            </field>
                            <div invisible="transaction_history_line">
                                <div class="empty_div_setting">
                                    <div class="o_view_nocontent">
                                        <div class="o_nocontent_help">
                                            <p class="o_view_nocontent_smiling_face">
                                                No invoice(s) found.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </page>
                        <page name="batch_log" string="Logs">
                            <field class="notebook_width" invisible="not transaction_log_lines" mode="list" name="transaction_log_lines" widget="batch_processing">
                                <list delete="false" limit="15" no_open="1" string="Logs">
                                    <field name="name" readonly="1"/>
                                    <field name="customer_name" readonly="1"/>
                                    <field name="customer_id" readonly="1"/>
                                    <field name="date_paid" readonly="1"/>
                                    <field column_invisible="1" name="currency_id" readonly="1"/>
                                    <field name="amount_paid" options="{'currency_field': 'currency_id'}" readonly="1" widget="monetary"/>
                                    <field name="payment_method" readonly="1"/>
                                    <field name="auth_code" readonly="1"/>
                                    <field name="transaction_ref" readonly="1"/>
                                    <field name="transaction_status" readonly="1"/>
                                    <field name="email" readonly="1"/>
                                </list>
                            </field>
                            <div invisible="transaction_log_lines">
                                <div class="empty_div_setting">
                                    <div class="o_view_nocontent">
                                        <div class="o_nocontent_help">
                                            <p class="o_view_nocontent_smiling_face">
                                                No Record(s) Found.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <data noupdate="1">
            <record id="my_record_78" model="batch.processing">
                <field name="add_filter">0</field>
            </record>
        </data>

        <record id="batch_processing_action" model="ir.actions.act_window">
            <field name="name">Batch Processing Action</field>
            <field name="res_model">batch.processing</field>
            <field name="res_id" ref="my_record_78"/>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <menuitem action="batch_processing_action" id="batch_processing_menu_up" name="Batch Processing for Invoices" parent="ebiz_transactions_menu_main"/>

    </data>
</odoo>
