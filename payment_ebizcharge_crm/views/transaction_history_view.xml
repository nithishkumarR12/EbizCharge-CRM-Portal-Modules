<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="form_view_transaction_history" model="ir.ui.view">
            <field name="name">Transaction History</field>
            <field name="model">transaction.header</field>
            <field name="arch" type="xml">
                <form create="0" js_class="ebiz_custom_form" string="Transaction History">
                    <h1>Transaction History</h1><br/>
                    <field invisible="1" name="company_ids" widget="many2many_tags"/>
                    <field invisible="1" name="is_surcharge_enabled"/>
                    <field invisible="1" name="currency_id"/>
                    <group>
                        <group>
                            <label class="text-nowrap" for="ebiz_profile_id" string="EBizCharge Merchant Account"/>
                            <field domain="[('is_valid_credential', '=', True), ('is_active', '=', True), '|', ('company_ids', 'in', company_ids), ('company_ids', '=', False)]" name="ebiz_profile_id" nolabel="1" options="{'no_create': True, 'no_open': True, 'no_quick_create': True}" string="EBizCharge Merchant Account"/>
                            <field name="start_date"/>
                        </group>
                        <group>
                            <label for="is_adjustment_field" string=" "/>
                            <field name="is_adjustment_field" nolabel="1" placeholder="  " readonly="1"/>
                            <label class="historymargin" for="end_date" string="To Date"/>
                            <field class="historymargin" name="end_date" nolabel="1"/>
                        </group>
                    </group>
                    <button class="oe_highlight" name="search_transaction" string="Refresh" type="object"/><br/>
                    <field invisible="not transaction_lines" widget="transaction_buttons" mode="list" name="transaction_lines">
                        <list create="0" delete="0" no_open="1" limit="15">
                            <button icon="fa-list" invisible="surcharge_amount == 0 or not parent.is_surcharge_enabled" name="action_transaction_show_details" title="Details" type="object" width="0.1"/>
                            <field column_invisible="1" name="id"/>
                            <field column_invisible="1" name="tax"/>
                            <field name="date_time" readonly="1"/>
                            <field column_invisible="1" name="actual_date" readonly="1"/>
                            <field name="partner_id" readonly="1" string="Customer"/>
                            <field name="customer_id" readonly="1"/>
                            <field name="email_id" readonly="0"/>
                            <field name="batch_id" readonly="1"/>
                            <field name="invoice_id" readonly="1" string="Document #"/>
                            <field column_invisible="1" name="currency_id" readonly="1"/>
                            <field column_invisible="not parent.is_surcharge_enabled" name="subtotal" options="{'currency_field': 'currency_id'}" readonly="1" string="Payment Amount" widget="monetary"/>
                            <field column_invisible="not parent.is_surcharge_enabled" name="surcharge_percentage" readonly="1"/>
                            <field column_invisible="not parent.is_surcharge_enabled" name="surcharge_amount" options="{'currency_field': 'currency_id'}" readonly="1" widget="monetary"/>
                            <field name="amount" options="{'currency_field': 'currency_id'}" readonly="1" string="Total Amount" sum="Total" widget="monetary"/>
                            <field name="account_holder" readonly="1"/>
                            <field name="card_no" readonly="1"/>
                            <field name="transaction_type" readonly="1"/>
                            <field name="status" readonly="1"/>
                            <field name="transaction_status" readonly="1"/>
                            <field name="ref_no" readonly="1"/>
                            <field name="auth_code"/>
                            <field name="avs_resp"   />
                            <field name="cvv2_resp"   />
                            <field name="source"/>
                            <field column_invisible="1" name="custnumber"/>
                            <field name="ebiz_profile_id" column_invisible="1" />
                        </list>
                    </field>
                    <div invisible="transaction_lines">
                        <div class="empty_div_setting">
                            <div class="o_view_nocontent">
                                <div class="o_nocontent_help">
                                    <p class="o_view_nocontent_smiling_face">
                                        No Transaction(s) found.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_transaction_header" model="ir.actions.server">
            <field name="name">Transaction History</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="payment_ebizcharge_crm.model_transaction_header"/>
            <field name="state">code</field>
            <field name="code">action = model.action_open_history()</field>
        </record>

        <menuitem action="action_transaction_header" id="transaction_history_menu" name="Transaction History" parent="ebiz_transactions_menu_main" sequence="0"/>

    </data>
</odoo>
