<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inh" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.ebizcharge</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="EBizCharge" string="EBizCharge" name="payment_ebizcharge_crm" groups="sales_team.group_sale_manager">
                    <block title="Scheduled Actions Settings" name="ebizcharge">
                        <field invisible="1" name="scheduler_act_deact"/>
                        <div class="row mt16 o_settings_container" name="ebizcharge_setting_container">
                            <div class="col-12 col-lg-12 o_setting_box" id="ebizcharge_threshold" title="None">
                                <group class="o_setting_box col-12">
                                    <group>
                                        <field name="interval_number_invoice"/>
                                    </group>
                                    <group>
                                        <field name="interval_unit_invoice"/>
                                    </group>
                                    <group>
                                        <field name="next_execution_date_invoice"/>
                                    </group>
                                    <group>
                                        <field name="time_zone"/>
                                    </group>
                                </group>
                                <group col="3">
                                    <group>
                                        <div align="left">
                                            <div invisible="scheduler_act_deact">
                                                <button class="oe_highlight" name="activate_invoice_cron_job" string="Activate" type="object"/>
                                            </div>
                                            <div invisible="not scheduler_act_deact">
                                                <button class="oe_highlight" name="deactivate_invoice_cron_job" string="Deactivate" type="object"/>
                                            </div>
                                        </div>
                                    </group>
                                </group>
                            </div>
                        </div>
                    </block>
                </app>
            </xpath>
        </field>
    </record>

    <record id="action_ebizcharge_config_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'payment_ebizcharge_crm', 'bin_size': False}</field>
    </record>

</odoo>
