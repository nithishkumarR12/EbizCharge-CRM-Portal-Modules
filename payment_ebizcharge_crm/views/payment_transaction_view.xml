<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_transaction_form_inh" model="ir.ui.view">
        <field name="name">Ebiz Transaction Form</field>
        <field name="model">payment.transaction</field>
        <field name="inherit_id" ref="payment.payment_transaction_form"/>
        <field name="arch" type="xml">
            <field name="provider_id" position="after">
                <field name="captured_amount" readonly="1"/>
                <field name="reminder_amount" readonly="1"/>
                <field name="emv_transaction" readonly="1"/>
            </field>
        </field>
    </record>

</odoo>
