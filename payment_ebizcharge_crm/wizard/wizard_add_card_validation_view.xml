<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="wizard_view_add_card_validation" model="ir.ui.view">
            <field name="name">wizard.order.process.transaction</field>
            <field name="model">wizard.add.card.validation</field>
            <field name="arch" type="xml">
                <form style="color:red">
                    <field invisible="1" name="check_avs_match"/>
                    <field invisible="1" name="is_card_denied"/>
                    <group invisible="is_card_denied">
                        <field invisible="address in ['Match']" name="address" readonly="1" style="color:red"/>
                        <field invisible="address not in ['Match']" name="address" readonly="1"/>
                        <field invisible="zip_code in ['Match']" name="zip_code" readonly="1" style="color:red"/>
                        <field invisible="zip_code not in ['Match']" name="zip_code" readonly="1"/>
                        <field invisible="card_code in ['Match']" name="card_code" readonly="1" style="color:red"/>
                        <field invisible="card_code not in ['Match']" name="card_code" readonly="1"/>
                    </group>
                    <p invisible="not is_card_denied">
                        Transaction Declined with a reason (<field name="denied_message" nolabel="1" readonly="1"/>)
                    </p>
                    <p invisible="is_card_denied">
                        Our card verification indicates this card could result in chargeback when used in future transactions.
                        <br/>
                        Do you still wish to save this card? If not, go back and enter different card information.
                    </p>
                    <footer>
                        <button class="oe_highlight" name="update_and_retry" string="Update Info and Retry" type="object"/>
                        <button class="oe_highlight" invisible="is_card_denied" name="save_card_anyway" string="Accept Card Anyway" type="object"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_view_add_card_validation" model="ir.actions.act_window">
            <field name="name">Security Mismatch</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.add.card.validation</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_view_add_card_validation"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
