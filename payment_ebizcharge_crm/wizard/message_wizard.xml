            <field name="name">wizard.multi.payment.message</field>
            <field name="model">wizard.multi.payment.message</field>
            <field name="arch" type="xml">
                <form string="Message">
                    <field invisible="1" name="name"/>
                    <div invisible="name != 'send'">
                        <field name="success_count" nolabel="1" readonly="1"/>
                        out of
                        <field name="total" nolabel="1" readonly="1"/>
                        request(s) were successfully sent!
                    </div>
                    <div invisible="name != 'resend'">
                        <field name="success_count" nolabel="1" readonly="1"/>
                        out of
                        <field name="total" nolabel="1" readonly="1"/>
                        request(s) were successfully resent!
                    </div>
                    <div invisible="name != 'delete'">
                        <field name="success_count" nolabel="1" readonly="1"/>
                        out of
                        <field name="total" nolabel="1" readonly="1"/>
                        request(s) for Payment Method(s) were successfully removed!
                    </div>
                    <br/>
                    <field color="green:status=='Success'" name="lines_ids" readonly="1">
                        <list>
                            <field name="customer_name"/>
                            <field name="customer_id"/>
                            <field color="green:status=='Success'" name="status"/>
                        </list>
