        <record id="custom_message_wizard_form" model="ir.ui.view">
            <field name="name">message.wizard</field>
            <field name="model">message.wizard</field>
            <field name="arch" type="xml">
                <form string="Message" edit="false" create="false">
                    <field invisible="1" name="currency_id"/>
                    <field name="text" nolabel="1" invisible="currency_id" style="font-weight:bold;"/>
                    <field invisible="1" name="is_ach"/>
                    <field invisible="1" name="transaction_id"/>
                    <field invisible="1" name="is_eligible"/>
                    <field invisible="1" name="is_surcharge"/>
                    <field invisible="1" name="surcharge_percentage"/>

                    <group invisible="not currency_id">
                        <field name="surcharge_total" options="{'currency_field': 'currency_id'}"
                               readonly="1" string="Total Amount Paid" widget="monetary"/>
                    </group>
                    <group class="oe_title" invisible="not currency_id">
                        <group string="Transaction Overview">
                            <field name="partner_id" readonly="1" string="Customer"/>
                            <field name="transaction_type" readonly="1" string="Transaction Type"/>
                            <field name="document_number" readonly="1" string="Document #"/>
                            <field name="reference_number" readonly="1" string="Reference #"/>
                            <field name="auth_code" readonly="1" string="Auth Code"/>
                        </group>
                        <group string="Payment Details">
                            <field name="payment_method" string="Payment Method" readonly="1"/>
                            <field name="date_paid" string="Date &amp; Time Paid" readonly="1"/>
                            <field name="subtotal" readonly="1" options="{'currency_field': 'currency_id'}"
                                   widget="monetary" string="Subtotal"/>
                            <field name="surcharge_percent" readonly="1"
                                   invisible="surcharge_percentage==0.0 or not is_surcharge or is_ach"
                                   string="Surcharge %"/>
                            <label for="surcharge_amount" string="Surcharge Amount" invisible="surcharge_amount != 0.0 or not is_surcharge or is_ach"/>
                            <field name="surcharge_amount" style="display: inline-block;" readonly="1"
                                   options="{'currency_field': 'currency_id'}" widget="monetary"
                                   invisible="surcharge_amount==0.0 or not is_surcharge or is_ach"/>
                            <span style="display: inline-block;" invisible="surcharge_amount != 0.0 or not is_surcharge or is_ach">Ineligible</span>
                        </group>
                        <group string="Security Checks" invisible="is_ach">
                            <field name="avs_street" readonly="1" string="AVS Street" invisible="is_ach"/>
                            <field name="avs_zip_code" readonly="1" string="AVS Zip / Postal Code" invisible="is_ach"/>
                            <field name="cvv" readonly="1" string="CVV" invisible="is_ach"/>
                        </group>
                    </group>
                    <footer>

                        <button name="action_confirm" class="oe_highlight" string="Ok" style="width:10%" type="object"/>

                    </footer>
                </form>
            </field>
        </record>


